/* About */
body.about #home-container{
	opacity: 0
}
body.about #about-container{
	opacity: 1
}
#about-container{
	opacity: 0
	position: absolute
	z-index: 10
	width: 100%
	height:100%
	box-sizing: border-box
	padding: 8% 13% 0 13%
	/*padding: 3%*/
	z-index: -10
	border-radius: 20px
	/*background-color: rgb(255,255,255,0.8)*/
		/* IE10+ */ 
	background-image: -ms-radial-gradient(center, ellipse closest-side, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.9) 100%)

	/* Mozilla Firefox */ 
	background-image: -moz-radial-gradient(center, ellipse closest-side, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.9) 100%)

	/* Opera */ 
	background-image: -o-radial-gradient(center, ellipse closest-side, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.9) 100%)

	/* Webkit (Safari/Chrome 10) */ 
	background-image: -webkit-gradient(radial, center center, 0, center center, 286, color-stop(0, rgba(255,255,255,0.9)), color-stop(100, rgba(255,255,255,0.9)))

	/* Webkit (Chrome 11+) */ 
	background-image: -webkit-radial-gradient(center, ellipse closest-side, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.9) 100%)

	/* W3C Markup */ 
	background-image: radial-gradient(ellipse closest-side at center, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.9) 100%)
}
