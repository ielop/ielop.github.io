body
	&.ielop 
		
		#ielop-container
			opacity: 1
			z-index: 10

		#background
			background-color: greenColor

		.menu-item 
			.menu-title
				color: purpleColor
				
			.menu-link
				border: 10px solid greenColor
				
				span
					background-color: purpleColor
			
	#ielop-container
		/*background-color: white*/
		/*border-radius:50px*/
		position:relative
		width:100%
		height:100%
		
		.circle
			position: absolute
			border-radius: 50%
			width: 50px
			height: 50px
			border: 40px solid greenColor
			z-index: 5 
			right: 110px;
			top: 10px;

			span
				height:30px
				width:30px
				background-color: purple
				border-radius: 50%
				display: block
				position: relative
				top: 10px
				left: 10px

			&.second
				width: 20px
				height: 20px
				border: 18px solid greenColor
				top: 380px;
				left: 400px;

				span
					height: 10px
					width: 10px
					top: 5px
					left: 5px
		
		.portfolio-content
			position:absolute
			width:100vw
			height:100vw
			border-radius:50%
			padding: 15% 35% 10% 20%
			box-sizing: border-box
			background-color:white
			right:-20%
			box-shadow:0 0 100px black
			text-align:center
			
			h2
				width:100%
				display:block
				color:purpleColor
				font-size: 40px
				margin-bottom:50px
				position:relative
			
			p
				font-family: 'Open Sans', sans-serif
				font-size:20px
				line-height:30px
				z-index:10
				
				strong
					font-weight:bold
					color:purpleColor
				
				
		.portfolio-container
			position:absolute
			width:40%
			height:100%
			position:relative
			top:0
			left:0

			.portfolio
				border-radius: 50%
				background-color: white
				width: 15vw
				height: 15vw
				margin: 2% 0 2% 4%;
				float:left
				position:relative
				/*horizontal vertical [blur] [spread] color*/
				box-shadow: 0 0 15px gray
				
				&.empty
					background:none
					box-shadow:none
					
				&.gacc
					background-color:#ffcc29
					
					img
						width 80%
						margin: 33% 10%;

				&.ieptbma
					background-image: url("../img/ieptbma-bg.png")
					background-size: 100% 100%

					img
						transform: scale(0.9)
						width:70%
						margin: 28% 14%
						-webkit-transition: transform 1s 
						transition: transform 1s

					&:hover
						img
							transform: scale(1)

				&.tedx
					
					img
						width: 80%
						margin: 45% 10%

						&.logo-2
							display: none

					&:hover
						background-color: black

						img.logo-1
							display: none

						img.logo-2
							display: block

				&.cacatua
					overflow: hidden
					background: url("../img/cacatua-bg-branco.png") 50% 58% no-repeat

					.logo-filter
						position: absolute
						opacity: 0
						width: 100%
						height: 100%
						-webkit-transition: opacity 0.5s /* Safari */
						transition: opacity 0.5s
						background-color: 	#FFFF00
						border-radius: 50%
						
					img.logo
						position: absolute
						margin: 31% 0 0 16%
						width:70%

					&:hover 
						.logo-filter
							opacity: 0.6

				&.ifind 
					background-image: url('../img/ifind-bg.jpg')

					img
						margin:20% 30%
						width: 40%
						-webkit-transition: transform 1s /* Safari */
						transition: transform 1s

					&:hover 
						img
							transform: rotateY(360deg)
				
				&.direcize
					img
						margin: 40% 10%
