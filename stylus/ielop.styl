body
	&.ielop 
		
		#ielop-container
			opacity: 1
			z-index: 10

		#background
			background-color: greenColor

		.menu-item 
			.menu-title
				color: purpleColor
				
			.menu-link
				border: 10px solid whiteColor
				
				span
					background-color: purpleColor
			
	#ielop-container
		position: absolute
		/*background-color: white*/
		/*border-radius:50px*/
		width:100%

		h2
			top: -6%
			left: 60%
			color:purpleColor
			font-size: 3vw
			position: absolute

		.portfolio-container
			margin-top: 3%

			.portfolio
				position: absolute
				border-radius: 50%
				background-color: white
				width: 15vw
				height: 15vw
				margin: 0 0 1.6vw 0
				/*horizontal vertical [blur] [spread] color*/
				/*box-shadow: 1px 1px 2px 20px black*/
					
				&.ieptbma
					background-image: url("../img/ieptbma-bg.png")
					background-size: 100% 100%
					

					img
						transform: scale(0.9)
						width:70%
						margin: 28% 14%
						-webkit-transition: transform 1s 
						transition: transform 1s

					&:hover
						margin-right: 0

						img
							transform: scale(1)

				&.tedx
					// top:30%
					left:25%
					
					img
						width: 80%
						margin: 45% 10%

						&.logo-2
							display: none

					&:hover
						background-color: black

						img.logo-1
							display: none

						img.logo-2
							display: block

				&.cacatua
					overflow: hidden
					background: url("../img/cacatua-bg-branco.png") 50% 58% no-repeat
					left:50%

					.logo-filter
						position: absolute
						opacity: 0
						width: 100%
						height: 100%
						-webkit-transition: opacity 0.5s /* Safari */
						transition: opacity 0.5s
						background-color: 	#FFFF00
						border-radius: 20px
						
					img.logo
						position: absolute
						margin: 31% 0 0 16%
						width:70%

					&:hover 
						.logo-filter
							opacity: 0.6

				&.ifind 
					background-image: url('../img/ifind-bg.jpg')
					left:75%
					

					img
						margin:20% 30%
						width: 40%
						-webkit-transition: transform 1s /* Safari */
						transition: transform 1s

					&:hover 
						img
							transform: rotateY(360deg)
				
				&.direcize
					left:100%
					
					img
						margin: 40% 10%
